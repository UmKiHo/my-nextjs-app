{
  "name": "nextjs-template",
  "version": "1.0.0",
  "scripts": {
    "dev": "next --port 3003",
    "prebuild": "pnpm lint && pnpm format && pnpm typecheck",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --fix . --ext='js,cjs,mjs,jsx,ts,cts,mts,tsx,mdx' --ignore-path='.gitignore' --cache",
    "format": "prettier --write . --ignore-path='.gitignore' --cache",
    "typecheck": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "analyze": "ANALYZE=true next build",
    "clean": "rm -rf .next .cache out node_modules",
    "post-update": "pnpm upgrade --latest"
  },
  "dependencies": {
    "next": "15.4.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^13.3.1",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/eslint": "^8.37.0",
    "@types/node": "24.1.0",
    "@types/prettier": "^2.7.2",
    "@types/react": "18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "10.4.14",
    "clsx": "^1.2.1",
    "eslint": "9.31.0",
    "eslint-config-next": "15.4.3",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-next": "^0.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unicorn": "^46.0.0",
    "jsdom": "^21.1.1",
    "postcss": "8.4.23",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "tailwindcss": "3.3.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "webpack": "^5.81.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm install && pnpm lint && pnpm format && pnpm typecheck && pnpm test -- --run && pnpm next build"
  },
  "license": "MIT",
  "keywords": [
    "nextjs",
    "react",
    "typescript",
    "tailwindcss",
    "zustand",
    "vitest",
    "eslint",
    "prettier"
  ]
}